-- complex test and arg expression
var hh = (\x -> return x)(adt):(-> return { 0, adt.h(89, 99) })()[2]! h: i, j -> return j
assert(hh == 99)

var mm = (adt):(-> return {{ adt.m('la') }})()[1][1]! *: a -> return a
