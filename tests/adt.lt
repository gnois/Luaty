
var tree = :!
	empty
	node: l, x, r

var e = tree.empty()
var n = tree.node

var top = n(n(n(e, 3, e), 4, e), 5, n(e, 2, e))

var depth
depth = \t ->
	return tree:t  !
		* return 0
		node: l, _, r -> return 1 + math.max(depth(l), depth(r))

assert(depth(top) == 3)


