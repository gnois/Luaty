var Slab = 4096 - 32

var string_reader = \src ->
	var pos = 1
	return ->
		var chunk = string.sub(src, pos, pos + Slab)
		pos = pos + #chunk
		return #chunk > 0 and chunk or nil


var file_reader = \filename ->
	var f
	if filename
		f = io.open(filename, 'r')
	else
		f = io.stdin
	
	return ->
		return f and f.read(@, Slab)

return {
	string = string_reader
	, file = file_reader
}
